{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "CommonJS",                
    "rootDir": "src",                    
    "outDir": "dist",                    
    "strict": true,                      
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
